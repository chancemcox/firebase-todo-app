FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port (if needed for any test servers)
EXPOSE 3000

# Set environment variables for testing
ENV NODE_ENV=test
ENV CI=true

# Default command to run tests
CMD ["npm", "test"]
