{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/vendor/**",
      "**/storage/**",
      "**/tests/**",
      "**/app/**",
      "**/bootstrap/**",
      "**/config/**",
      "**/database/**",
      "**/lang/**",
      "**/resources/**",
      "**/routes/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://todo.cox-fam.com/api/**"
      },
      {
        "source": "/todos",
        "destination": "https://todo.cox-fam.com/todos"
      },
      {
        "source": "/apidoc",
        "destination": "/apidoc/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization, X-Requested-With"
          }
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
